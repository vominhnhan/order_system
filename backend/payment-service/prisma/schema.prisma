generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Payment {
  id          Int      @id @default(autoincrement())
  orderId     Int
  tableNumber Int
  totalAmount Float
  status      String   @default("pending")
  createdAt   DateTime @default(now()) @db.DateTime(0)
  updatedAt   DateTime @default(now()) @updatedAt
}